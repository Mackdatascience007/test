<html>
    <body>
    <!-- ... -->

    <%= form_tag url_for(action: 'create'), method: "post" do %>
        <%= label_tag 'Title' %>
        <%= text_field_tag 'title', @gossip.title %>

        <br /> <br />

        <%= label_tag 'Content' %>
        <%= text_area_tag 'content', @gossip.content %>

        <br /> <br />

        <%= submit_tag "Create gossip" %>
    <% end %>
    <% if @gossip.errors.any? %>
    <p><div class="alert alert-danger" role="alert"> Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</div></p>
    <ul>
        <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    </ul>
        <% end %>
    <% else %>
        <p><div class="alert alert-success" role="alert"> Votre formulaire a été soumis avec succès </div></p>
    <% end %>

    </body>
</html>